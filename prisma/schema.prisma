generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OrdreReparation {
  IDOR              Int      @id @default(autoincrement())
  Jobno             Int
  DateOR            DateTime @db.Date
  Departement       String?
  NomReceptionnaire String?
  Commentaire       String?
  CodeInterne       String?
  Statut            status?
  Montant           Float?
  DateMaj           DateTime @db.Date
  Delai             Int
  // foreign key //
  NumVeh            Int
  NumSite           Int
  NumClient         Int
  Client            Client   @relation(fields: [NumClient], references: [id])
  Site              Site     @relation(fields: [NumSite], references: [id])
  Vehicule          Vehicule @relation(fields: [NumVeh], references: [id])
}

model Vehicule {
  id               Int               @id @default(autoincrement())
  Immatriculation  String
  vehiclePlate     String?
  chassisNumber    String?
  brand            String?
  model            String?
  Km               Int?
  OrdresReparation OrdreReparation[]
}

model Client {
  id               Int               @id @default(autoincrement())
  Nom              String
  OrdresReparation OrdreReparation[]
}

model Site {
  id               Int               @id @default(autoincrement())
  Nom              String
  OrdresReparation OrdreReparation[]
}

enum status {
  en_cours
  en_attente
  cloture
}
